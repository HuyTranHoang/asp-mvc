@model string

@{
    var controllerName = ViewData["ControllerName"] ?? "Home";

    var result = Model.Split('_').First();

    var sortOrderQuery = Context.Request.Query["sortOrder"].ToString();
    var currentPage = Context.Request.Query["page"];
    var searchString = Context.Request.Query["s"];
}

<a asp-action="Index" asp-controller="@controllerName" asp-route-page="@currentPage" asp-route-s="@searchString" asp-route-sortOrder="@Model" class="text-dark">
    @if (!string.IsNullOrEmpty(sortOrderQuery) && sortOrderQuery.Contains(result, StringComparison.OrdinalIgnoreCase))
    {
        <i class="fa-duotone fa-sort-@(sortOrderQuery.Contains("asc") ? "up" : "down")"></i>
    }
    else
    {
        <i class="fa-solid fa-sort"></i>
    }
</a>