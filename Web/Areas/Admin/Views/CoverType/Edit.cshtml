@model CoverType

@{
    ViewData["Title"] = "Create";
}

<section class="bg-body-tertiary mt-4 pb-3 rounded-bottom shadow-lg">
    <h1 class="bg-gradient bg-body-secondary px-3 py-4 rounded-top text-center">Create Cover Type</h1>

    <div class="d-flex justify-content-end px-4 py-2">
        <a asp-action="Index" class="btn btn-primary text-decoration-none text-white">
            <i class="fa-regular fa-arrow-left-to-line"></i> Back to cover type list
        </a>
    </div>

    <div class="p-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-5 d-flex justify-content-center">
                <input class="btn btn-primary text-white" style="width: 10rem" type="submit" value="Update" />
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}